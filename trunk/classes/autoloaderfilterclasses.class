class autoloaderFilterClasses extends FilterIterator {

	public function accept() {
		return true;
	}

	function valid() {
		static $arrExtensions = array('class', 'php', 'inc', 'i');

		$arrFilename = explode('.', $this->getFilename());
		$sExtension = array_pop($arrFilename);

		return in_array($sExtension, $arrExtensions, true);
	}
}

